# ==================================
# SplitIt Environment Configuration
# ==================================
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env file to version control!

# ==================================
# DATABASE CONFIGURATION
# ==================================

# MongoDB (User Service)
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/userdb?authSource=admin
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=userdb
MONGODB_USERNAME=admin
MONGODB_PASSWORD=admin123

# PostgreSQL (Other Services)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=splitwise
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123

# ==================================
# JWT CONFIGURATION
# ==================================
JWT_SECRET=your-very-secure-256-bit-secret-key-change-this-in-production-environment-must-be-at-least-256-bits-long
JWT_EXPIRATION_MS=3600000

# ==================================
# KAFKA CONFIGURATION
# ==================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# ==================================
# SERVICE DISCOVERY
# ==================================
EUREKA_SERVER_URL=http://discovery-server:8761/eureka/

# ==================================
# TRACING
# ==================================
ZIPKIN_BASE_URL=http://zipkin:9411

# ==================================
# CORS CONFIGURATION
# ==================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:5173,http://localhost:8100

# ==================================
# FRONTEND URLs
# ==================================
FRONTEND_URL=http://localhost:3000

# ==================================
# EMAIL CONFIGURATION (Notification Service)
# ==================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@splitit.com
SMTP_FROM_NAME=SplitIt

# ==================================
# PAYMENT GATEWAY (Payment Service)
# ==================================
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-api-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret
PAYMENT_GATEWAY_WEBHOOK_SECRET=your-webhook-secret

# ==================================
# AWS CONFIGURATION (Optional - for S3, SES, etc.)
# ==================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=splitit-receipts

# ==================================
# APPLICATION ENVIRONMENT
# ==================================
APP_ENV=development
# Options: development, staging, production

# ==================================
# LOGGING
# ==================================
LOG_LEVEL=INFO
# Options: TRACE, DEBUG, INFO, WARN, ERROR

# ==================================
# SECURITY
# ==================================
# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Session timeout (in seconds)
SESSION_TIMEOUT=3600

# ==================================
# FEATURE FLAGS
# ==================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_PAYMENT_GATEWAY=false
ENABLE_ANALYTICS=true
